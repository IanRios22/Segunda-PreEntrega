<div id="chat-container" class="rounded-4">
    <div id="chat-header">
        <h4>Ventaja para Chatear :D</h4>
        <h6 id="nombreusuario">Usuario</h6>
        <img src="https://img.freepik.com/vector-premium/diseno-logo-chat_93835-108.jpg" alt="Logo Customer Service"
            id="customer-service-logo">
    </div>
    <div id="chat-messages">
        <!-- Placeholder for incoming and outgoing messages -->
        <div class="message sender">
            <div class="user-info">
                <div class="sender-name">Conectado!! :v</div>
            </div>
            <div id="chat">Cargando mensajes...espera :v</div>
        </div>
    </div>
    <form id="formulario">
        <input type="text" name="mensaje" id="mensaje" placeholder="Type your message...">
        <button id="sendMessage"><i class="fas fa-paper-plane"></i> Enviar Mensaje</button>
        <button id="clearChat"><i class="fas fa-trash"></i> Trash messages</button>
    </form>
</div>

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>